<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="http://localhost:3000/socket.io/socket.io.js"></script>
  <title>Client chat</title>
</head>
<body>
  <input type="text" placeholder="Insira seu nickname"/>
  <button>Slavar</button>
  <div name="nickname">
  </div>

  <form>
    <input id="messageUser" type="text" placeholder="Digite uma nova mensagem aqui"/>
    <button>Enviar</button>
  </form>
    <script>
      const socket = io();
      const formMessage = document.querySelector('form');
      const userMessage = document.querySelector('#messageUser');
      
      formMessage.addEventListener('submit', (e) => {
        e.preventDefault();
        socket.emit('message', userMessage.value);
        userMessage.value = '';
        return false;
      });
      
    </script>

  <div name="messages">
    <ul>

    </ul>
  </div>
</body>
</html>
