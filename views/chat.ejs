<!DOCTYPE html>
<html>
  <head>
    <title>WebChat</title>
  </head>
  <body>
    <div>
      <form id="changeCurrentNickname">
        <input type="text" placeholder="Insira seu nome" data-testid="nickname-box" id="nickname-box">
        <button type="submit" data-testid="nickname-button">Salvar</button>
      </form>
    </div>

    <div>
      <h2>Usu√°rios Conectados</h2>
       <ul id ="usersLogged">

       </ul>
    </div>

    <div>
      <ul>
        <% oldMessages.forEach((oldMessage) => { %>
          <li data-testid="message"><%= oldMessage %></li>
        <% }) %>
      </ul>
    </div>

    <div>
      <form>
        <input type="text" placeholder="Messagem" data-testid="message-box">
        <button type="submit" data-testid="send-button">Enviar</button>
      </form>
    </div>

 

    <script src="/socket.io/socket.io.js"></script>
    <script src='./js/chat.js'></script>


  </body>

</html>